{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,

        "lib": ["DOM", "DOM.Iterable", "ESNext"],

        "allowJs": true,
        "checkJs": false,

        "skipLibCheck": true,
        "strict": false,

        "module": "ESNext",
        "moduleResolution": "Bundler",

        "resolveJsonModule": true,
        "isolatedModules": true,

        "jsx": "react-jsx",
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "doc", "dist"]
}
